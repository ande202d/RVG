<Page
    x:Class="RVG.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RVG"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Styling af artefakt knapper -->
    <Page.Resources>
        <Style  x:Key="ArtefactButton"  TargetType="Button">
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
            <Setter Property="Foreground" Value="BlueViolet"></Setter>
            <Setter Property="Height" Value="20"></Setter>
            <Setter Property="Width" Value="20"></Setter>
            <Setter Property="Background" Value="Red"></Setter>
            <Setter Property="Padding" Value="0"></Setter>

        </Style>
    </Page.Resources>


    <!-- Definering af grid -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>





            <!-- Baggrund -->
        <Border Background="#fff"/>
        <Border Grid.Column ="1" Background="#999"/>

        <!-- Venstre kolonne med artefakt -->
        <StackPanel Margin="30">
            <TextBlock FontSize="20" FontWeight="Bold" Text="RAGNAROK GUIDELESS APP" Foreground="Pink"></TextBlock>
            <TextBlock Text="ARTEFAKT 1" FontWeight="Bold" Foreground="AliceBlue"></TextBlock>
            <TextBlock Height="200" TextWrapping="Wrap" Text="Tissemand igen" Foreground="Wheat"></TextBlock>
            <Button Content="AFSPIL" ></Button>
        </StackPanel>   

        <!-- Højre kolonne med kort -->
        <StackPanel Grid.Column="1" Margin="30">
            <StackPanel.Background>
                <ImageBrush ImageSource="../Files/Kort.png" Opacity="0.7"/>
            </StackPanel.Background>
            <TextBlock Text="TISSEMAND"></TextBlock>
            <Button Margin="100, 50" Style="{StaticResource ArtefactButton}">1</Button>
            <Button Margin="50, 20" Style="{StaticResource ArtefactButton}">2</Button>
            <Button Margin="350, 100" Style="{StaticResource ArtefactButton}">3</Button>
            <Button Margin="400, 90" Style="{StaticResource ArtefactButton}">4</Button>
            <Button Margin="300, 50" Style="{StaticResource ArtefactButton}">5</Button>

            <!--<Image MaxHeight="800" Source="Files/Kort.png"></Image> -->

        </StackPanel>





    </Grid>
</Page>
